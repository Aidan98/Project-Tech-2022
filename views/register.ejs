<body>
    <%- include ('./partials/header') -%>
        <%- include ('./partials/errorMessages')-%>
            <form action='/users/register' method='POST'>
                <fieldset>
                    <legend>Festiv</legend>
                    <label for='name'>Name</label>
                    <input type='name' id='name' name='name' class='form-control' placeholder='Enter Name'                        
                        value='<%= typeof name != 'undefined' ? name : '' %>' /> 
                    <label for='email'>Email</label>
                    <input type='email' id='email' name='email' class='form-control' placeholder='Enter Email'
                        value='<%= typeof email != 'undefined' ? email : '' %>' />
                    <label for='password'>Password</label>
                    <input type='password' id='password' name='password' class='form-control'
                        placeholder='Create Password' value='<%= typeof password != 'undefined' ? password : '' %>' />
                    <label for='password2'>Confirm Password</label>
                    <input type='password' id='password2' name='password2' class='form-control'
                        placeholder='Confirm Password' value='<%= typeof password2 != 'undefined' ? password2 : '' %>' />
                </fieldset>
                <fieldset>
                    <legend>Music interests</legend>
                    <input type="checkbox" id="genre" name="genre" value="Electronic">
                    <label for="genre">Electronic</label><br>
                    <input type="checkbox" id="genre" name="genre" value="Blues">
                    <label for="genre">Blues</label><br>
                    <input type="checkbox" id="genre" name="genre" value="Pop">
                    <label for="genre">Pop</label>
                    <input type="checkbox" id="genre" name="genre" value="Country">
                    <label for="genre">Country</label>
                    <input type="checkbox" id="genre" name="genre" value="House">
                    <label for="genre">House</label>
                    <input type="checkbox" id="genre" name="genre" value="Hip Hop">
                    <label for="genre">Hip hop</label>
                    <input type="checkbox" id="genre" name="genre" value="Jazz">
                    <label for="genre">Jazz</label>
                    <input type="checkbox" id="genre" name="genre" value="RB">
                    <label for="genre">R & B</label>
                    <input type="checkbox" id="genre" name="genre" value="Hard rock">
                    <label for="genre">Hard rock</label>
                    <input type="checkbox" id="genre" name="genre" value="Kpop">
                    <label for="genre">Kpop</label>
                    <input type="checkbox" id="genre" name="genre" value="Metal">
                    <label for="genre">Metal</label>
                </fieldset>
                <button type='submit'>Register</button>
            </form>
            <a href='./login'><button id='switch'>Log in</button></a>
</body>